<script src="../../assets/lib/require.js"></script>
<script src="../../assets/dist/config.js"></script>
<script>
    require(["react","react-dom","MessageBox","common","bootstrap"], function(){
        listeners();
        initImgScroll();
    });

    /**
     * 监听
     */
    function listeners(){
        $.fn.imgScroll = function(){
            var t = $(this);
            var lbtn = t.children(".scroll_left");
            var rbtn = t. children('.scroll_right');
            var li = t.find("ul").children("li");
            var tw = t.width();
            var scELe = t.find("ul");

            console.log(tw);
            return this.each(function(){
                var count = 1;
                lbtn.on('click', function(){
                    scELe.animate({
                        marginLeft: -tw * count + 'px'
                    },function(){
                        console.log(count)
                        if(count < li.length - 1) {
                            count++;
                        }else {
                            count = 0;
                        }
                        console.log('-=--------')
                        console.log(count)
                    });
                });
                rbtn.click(function(){
                    if(count > 1) {
                        count--;
                    }
                    if(count == 0) {
                        count = li.length - 1
                    }
                    console.log('==========')
                    console.log(count)
                    scELe.animate({
                        marginLeft: -tw * (count - 1) + 'px'
                    },function(){
                        console.log(count)
                    });
                });
            });
        }
    }

    function initImgScroll() {
        $('.scroll').imgScroll();
    }

</script>
</body>
</html>
